const CACHE_NAME = 'hypercalc-vlegendary-v1';
const ASSETS_TO_CACHE = [
  './',
  './index.html',
  './manifest.json',
  './ui.js',
  './calculator.js',
  './geometry.js',
  './canvas-measure.js',
  './physics/world.js',
  './physics/body.js',
  './physics/sandbox.js',
  './physics/integrator.js',
  './auto_trainer.js',
  './public/Rust/hypercalc_wasm_bg.wasm',
  './public/Rust/hypercalc_wasm.js',
  './public/css/style.css',
  './assets/icon-192.png',
  './assets/icon-512.png',
  './assets/icon-1024.png'
];

// ==========================
// Install
// ==========================
self.addEventListener('install', (event) => {
  console.log('[SW] Installing HyperCalc vLegendary...');
  self.skipWaiting();
  event.waitUntil(
    caches.open(CACHE_NAME).then(cache => {
      console.log('[SW] Caching core assets...');
      return cache.addAll(ASSETS_TO_CACHE);
    })
  );
});

// ==========================
// Activate
// ==========================
self.addEventListener('activate', (event) => {
  console.log('[SW] Activating HyperCalc vLegendary...');
  event.waitUntil(
    caches.keys().then(keys => Promise.all(
      keys.map(key => {
        if(key !== CACHE_NAME){
          console.log('[SW] Removing old cache:', key);
          return caches.delete(key);
        }
      })
    ))
  );
  return self.clients.claim();
});

// ==========================
// Fetch – Cache First with Network Fallback
// ==========================
self.addEventListener('fetch', (event) => {
  if(event.request.method !== 'GET') return;
  event.respondWith(
    caches.match(event.request).then(cached => {
      if(cached){
        // ⚡ Serve from cache
        return cached;
      }
      return fetch(event.request)
        .then(response => {
          // Cache dynamically
          if(!response || response.status !== 200 || response.type !== 'basic') return response;
          const cloned = response.clone();
          caches.open(CACHE_NAME).then(cache => cache.put(event.request, cloned));
          return response;
        })
        .catch(() => {
          // Fallback: offline HTML or image
          if(event.request.destination === 'document') return caches.match('./index.html');
        });
    })
  );
});

// ==========================
// Push Notifications (Optional for Future)
// ==========================
self.addEventListener('push', (event) => {
  const data = event.data ? event.data.json() : { title: 'HyperCalc', body: 'آپدیت جدید موجود است!' };
  event.waitUntil(
    self.registration.showNotification(data.title, { body: data.body, icon: './assets/icon-192.png' })
  );
});

console.log('[SW] HyperCalc Service Worker ready!');
